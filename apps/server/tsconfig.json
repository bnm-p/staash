{
	"extends": "@workspace/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["node"]
	},
	"jsx": "react-jsx",
	"jsxImportSource": "hono/jsx",
	"target": "ESNext",
	"module": "NodeNext",
	"strict": true,
	"verbatimModuleSyntax": true,
	"skipLibCheck": true,
	"exclude": ["node_modules"]
}
